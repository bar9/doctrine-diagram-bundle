<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <services>

    <service class="\Jawira\DoctrineDiagramBundle\Service\DoctrineDiagram"
             id="jawira.doctrine_diagram.doctrine_diagram">
      <argument type="service" id="doctrine"/>
        <argument key="$size">%doctrine_diagram.size%</argument>
        <argument key="$filename">%doctrine_diagram.filename%</argument>
        <argument key="$extension">%doctrine_diagram.extension%</argument>
        <argument key="$server">%doctrine_diagram.server%</argument>
        <argument key="$connection">%doctrine_diagram.connection%</argument>
    </service>

    <service class="\Jawira\DoctrineDiagramBundle\Command\DoctrineDiagramCommand"
             id="jawira.doctrine_diagram.doctrine_diagram_command" public="false">
      <argument type="service" id="jawira.doctrine_diagram.doctrine_diagram"/>
      <argument>doctrine:diagram</argument>
      <tag name="console.command" command="doctrine:diagram"/>
    </service>

  </services>
</container>
